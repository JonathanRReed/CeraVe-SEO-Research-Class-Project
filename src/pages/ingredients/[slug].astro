---
import BaseLayout from '../../layouts/BaseLayout.astro';
import IngredientTemplate from '../../components/templates/IngredientTemplate.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const ingredients = await getCollection('ingredients');
  return ingredients.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props as { entry: CollectionEntry<'ingredients'> };

const breadcrumbs = [
  { title: 'Home', url: '/' },
  { title: 'Ingredients', url: '/ingredients' },
  { title: entry.data.title, url: `/ingredients/${entry.slug}` },
];
---

<BaseLayout
  title={`${entry.data.title} | Ingredients`}
  description={entry.data.description}
  keywords={entry.data.keywords ?? []}
  breadcrumbs={breadcrumbs}
>
  <IngredientTemplate entry={entry} />
</BaseLayout>
